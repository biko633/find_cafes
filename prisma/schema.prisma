generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cafes {
  id                    Int    @id @default(autoincrement())
  name_en               String @unique
  name_ar               String @unique
  map_url               String
  img_url               String
  latitude              Float  @default(0)
  longitude             Float  @default(0)
  toilets               Int    @default(0)
  wifi                  Int    @default(0)
  wheelchair_accessible Int    @default(0)
  accepts_reservations  Int    @default(0)
  family_friendly       Int    @default(0)
  price_per_person      String
  city_code_2           String
  Cities                Cities @relation(fields: [city_code_2], references: [city_code_2], onDelete: NoAction, onUpdate: NoAction)
}

model Cities {
  id             Int       @id @default(autoincrement())
  name           String    @unique
  name_ar        String    @unique
  country_code_2 String
  city_code_2    String    @unique
  currency       String
  Cafes          Cafes[]
  Countries      Countries @relation(fields: [country_code_2], references: [country_code_2], onDelete: NoAction, onUpdate: NoAction)
}

model Countries {
  id             Int      @id @default(autoincrement())
  name           String   @unique
  name_ar        String   @unique
  country_code_2 String   @unique
  Cities         Cities[]
}
